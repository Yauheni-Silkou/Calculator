<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CalcButton" TargetType="Button">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <Style x:Key="CalcDigitButton" TargetType="Button" BasedOn="{StaticResource CalcButton}">
        <Setter Property="Background" Value="#FFBCD2EA"/>
        <Setter Property="Foreground" Value="Black"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFEADE5D"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="CalcFunctionButton" TargetType="Button" BasedOn="{StaticResource CalcButton}">
        <Setter Property="Background" Value="#FFFF4141"/>
        <Setter Property="Foreground" Value="#FFffffff"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFE4BE0C"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>